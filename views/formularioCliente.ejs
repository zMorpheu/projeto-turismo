<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@700&family=Poppins:ital@1&family=Roboto&display=swap" rel="stylesheet">

  <link rel="stylesheet" type="text/css" href="css/formularioCliente.css">

  <title>Formulário Clientes</title>
</head>
<body>
  <section id="page-lading-content">
    <nav>
      <header class="page-header">
        <nav class="top-bar-container">
          <a href="/">
            <h2>Projeto Turismo</h2>
          </a>
        </nav>
      </header>
    </nav>
  </section>
  <section class="formContainer">
    <nav class="formItens">
      <form id="form" method="post">
        <h2 class="tittleForm">Cadastro de Clientes</h2>
        <label for="nome" class="labelName"> Nome
          <input type="text" class="inputStyle" id="nome" placeholder="Ex. João Silva">
        </label>
        <label for="data_nascimento" class="labelName"> Data de Nascimento
          <input type="date" class="inputStyle" id="data_nascimento">
        </label>
        <label for="cpf" class="labelName"> CPF
          <input type="number" class="inputStyle" id="cpf" placeholder="Ex. 1234567897855">
        </label>
        <label for="contato" class="labelName"> Contato
          <input type="text" class="inputStyle" id="contato">
        </label>
        <label for="sexo" class="labelName"> Sexo
          <input type="text" class="inputStyle" id="sexo">
        </label>
        <nav class="buttonsContainer">
          <input type="reset" class="inputButton " value="Cancelar" />
          <input type="submit" class="inputButton" value="Enviar" />
        </nav>
      </form>
    </nav>
  </section>
  <script>

    const urlParams = new URLSearchParams(window.location.search)
    const id = urlParams.get('id')

    if(id) {
      this.editClient(id)
      this.saveChanges()
    } else {
      this.addClient()
    }

    function editClient(id) {

      var request = new XMLHttpRequest()

      request.open('GET', `http://localhost:3000/clientes/${id}`, true)
      
      request.onload = function () {
        
        var data = JSON.parse(this.response)
        
        if (request.status >= 200 && request.status < 400) {
          data.forEach(cliente => {

            document.getElementById('nome').value = cliente.nome;
            document.getElementById('data_nascimento').value = cliente.data_nascimento;
            document.getElementById('cpf').value = cliente.cpf;
            document.getElementById('contato').value = cliente.contato;
            document.getElementById('sexo').value = cliente.sexo;
          })
        }
      }
      request.send()
    }

    function addClient() {
      var form = document.getElementById('form')
  
      form.addEventListener('submit', function(e){
      e.preventDefault()
  
      var nome = document.getElementById('nome').value
      var data_nascimento = document.getElementById('data_nascimento').value
      var cpf = document.getElementById('cpf').value
      var contato = document.getElementById('contato').value
      var sexo = document.getElementById('sexo').value
  
      fetch('http://localhost:3000/clientes', {
        method: 'POST',
        body: JSON.stringify({
          nome:nome,
          data_nascimento:data_nascimento,
          cpf: cpf,
          contato: contato,
          sexo: sexo,
          status: 1
        }),
        headers: {
          'Content-type': 'application/json; charset=UTF-8',
        }
        })
        .then(function(response) { 
          return response.json()
        })
        .then(function(data){
          console.log(data)
        }).catch(error => console.error('Error:', error)); 
      });

    }

    function saveChanges() {
      var form = document.getElementById('form')
  
      form.addEventListener('submit', function(e){
      e.preventDefault()
  
      var nome = document.getElementById('nome').value
      var data_nascimento = document.getElementById('data_nascimento').value
      var cpf = document.getElementById('cpf').value
      var contato = document.getElementById('contato').value
      var sexo = document.getElementById('sexo').value
  
      fetch(`http://localhost:3000/clientes/${id}`, {
        method: 'PATCH',
        body: JSON.stringify({
          nome:nome,
          data_nascimento:data_nascimento,
          cpf: cpf,
          contato: contato,
          sexo: sexo,
          status: 1
        }),
        headers: {
          'Content-type': 'application/json; charset=UTF-8',
        }
        })
        .then(function(response) { 
          return response.json()
        })
        .then(function(data){
          console.log(data)
        }).catch(error => console.error('Error:', error)); 
      });

    }
</script>
</body>
</html>